{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../out",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Sistema de Etiquetas",
    "version": "1.0.11" 
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$APPDATA/products.db", "$APPDATA/products.db.backup"]
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.github.com/*"]
      },
      "dialog": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.estrela-metais.sistema-etiquetas",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "publisher": "Estrela Metais"
    },
    "updater": {
      "active": true,
      "endpoints": ["https://raw.githubusercontent.com/celsojuniorladislau/SistemaDeImpressaoDeEtiquetas/main/latest.json"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJGNEMwRTkwOTBCNDMwNjUKUldSbE1MU1FrQTVNdjBXMThubG9BUTl3TmR5WEZIdUIzT1ZkbFNzTlE1bzB0QUROeWlaM1B0SnYK"
    },           
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Sistema de Etiquetas - Estrela Metais",
        "width": 971,
        "visible": true,
        "decorations": true,
        "center": true,
        "focus": true,
        "skipTaskbar": false,
        "alwaysOnTop": false
      }
    ]
  }
}